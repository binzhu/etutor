<h1>Login</h1>
      <%= form_tag do %>
	<legend> Please Login</legend>
	<div>
	  <label for="username">Username: </label>
	  <%= text_field_tag :username %>
	</div>
	
	<div>
	  <label for="password">Password:</label>
	  <%= password_field_tag :password %>
	</div>
	
	<div>
	  <%= submit_tag "Login" %>
	</div>
      <% end %>
<%=render 'searchtutor'%>
<br />
<div id="matchedsubs"> <%=matchlinks%></div>
<h2>Click on picture to see tutor profile</h2>
<table id="tutors">
  <thead>
    <tr>
      <th width="70"></th>
      <th width="210">Tutor Name</th>
      <th>Availability</th>
    </tr>
  </thead>  
</table>
<% @tutors.each do |tutor| %>

<div class="tuteritem">
  <div class="avatar">
    <%=link_to image_tag(tutor.user.avatar.url(:thumb)), tutor.user %>
  </div><!--avatar div end-->
  <div class="tutordescription">
    <h3><%= tutor.user.fullname%>-<%=tutor.user.username%></h3>
    <p>University:<%= tutor.user.university_id %></p>
    <p>Average rating<%= tutor.approved %></p>
    <%if false%><!--if admin-->
    <%= link_to 'Show', tutor %>
    <%= link_to 'Edit', edit_tutor_path(tutor) %>
    <%= link_to 'Destroy', tutor, method: :delete, data: { confirm: 'Are you sure?' } %>
    <%end%>
  </div><!--tutordescription div end-->
  <div class="tutorschedule">
    <%= link_to 'Monday 2:00 - 4:00'%>
  </div><!--tutorschedule div end-->
  
  <% link_to 'select tutor', new_meeting_url(:tutid => tutor.id) %>
  <div class="fix"></div>
</div><!--tutoritem div end-->
<% end %>


<br />

<%= link_to 'New Tutor', new_tutor_path %>
